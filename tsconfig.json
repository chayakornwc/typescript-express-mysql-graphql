{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es6",
      "esnext"
    ],
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "coverage",
    "build",
    ".git"
  ]
}
